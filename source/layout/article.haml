- categories = current_article.data.category.split('/')
!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title
      #{current_article.title + ' - ' unless current_article.nil?}
      = site_title
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
    = stylesheet_link_tag 'all', media: 'all'
  %body.posts-show.sharing-post
    = partial 'partials/navbar'
    .body
      .container.row
        .posts-header
          .page-heading
            .posts-title
              -# XXX: カテゴリを分割する
              %ul.categories
                - categories.each do |category|
                  %li= category
              %h1.title
                = current_article.title
                - current_article.tags.each do |tag|
                  = link_to tag_path(tag), class: 'hashtag' do
                    = '#'
                    = tag
            .published-time
              %i.fa.fa-share-square-o
              Updated at
              %span.num<>= current_article.data.updated_at
        #main.main-column{:role => "main"}
          .post-body.markdown= yield
        .right-column= partial 'partials/side_bar'
