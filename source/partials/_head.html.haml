- page_title = "#{current_article.title + ' - ' unless current_article.nil? } #{site_title}"
%meta{charset: "utf-8"}/
%meta{content: "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}/
%meta{content: "width=device-width, initial-scale=1.0, minimum-scale=1, maximum-scale=1, user-scalable=no", name: "viewport"}
%meta{content: page_title, property: "og:title"}/
%meta{content: "website", property: "og:type"}/
%meta{content: full_url(current_page.path), :property => "og:url"}/
%meta{content: "images/og-image.png", property: "og:image"}/
%link{rel: "shortcut icon", href: "images/favicon.ico"}
%title= page_title
= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
= stylesheet_link_tag 'screen', media: 'all'
