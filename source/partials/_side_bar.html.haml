%aside.side-bar
  %section.section
    %h2.side-bar__heading
      %i.fa.fa-file-text-o
      Recent Articles
    .side-bar__content
      %ul.posts-list.side-bar__posts-list
        - esa.articles[0...10].each do |article|
          %li.post-list
            %ul.categories
              - categories = article.data.category.to_s.split('/')
              - categories.each do |category|
                %li= category
            %h4.title
              = link_to article, class: 'bare-name' do
                = article.title
            .date= article.date.strftime('%Y - %m - %d')
